{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:compat/recommended"],
  "ignorePatterns": ["dist/", "node_modules"],
  "plugins": ["@typescript-eslint", "prettier"],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "L": "readonly",
    "google": "readonly"
  }
}
